  </div>
  
  <div class="score">
    <p>Pontua√ß√£o: <span id="score">0</span></p>
    <button onclick="resetGame()">Novo Jogo</button>
  </div>
</div>

<style>
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    text-align: center;
    font-family: Arial, sans-serif;
  }
  
  .game-board {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    margin: 30px 0;
  }
  
  .card {
    width: 80px;
    height: 80px;
    background: #3498db;
    border: 2px solid #2980b9;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .card:hover {
    background: #2980b9;
    transform: scale(1.05);
  }
  
  .card.flipped {
    background: #e74c3c;
    transform: rotateY(180deg);
  }
  
  .score {
    margin-top: 20px;
  }
  
  button {
    background: #2ecc71;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }
  
  button:hover {
    background: #27ae60;
  }
</style>

<script>
  let flippedCards = [];
  let matchedPairs = 0;
  let score = 0;
  
  const emojis = ['üê∂', 'üê±', 'üê≠', 'üêπ', 'üê∞', 'ü¶ä', 'üêª', 'üêº'];
  let cardValues = [];
  
  function initializeGame() {
    cardValues = [...emojis, ...emojis];
    cardValues.sort(() => Math.random() - 0.5);
    
    document.querySelectorAll('.card').forEach((card, index) => {
      card.textContent = '‚ùì';
      card.classList.remove('flipped', 'matched');
      card.onclick = () => flipCard(card, index);
    });
    
    flippedCards = [];
    matchedPairs = 0;
    score = 0;
    updateScore();
  }
  
  function flipCard(card, index) {
    if (flippedCards.length === 2 || card.classList.contains('flipped') || card.classList.contains('matched')) {
      return;
    }
    
    card.textContent = cardValues[index];
    card.classList.add('flipped');
    flippedCards.push({ card, index });
    
    if (flippedCards.length === 2) {
      setTimeout(checkMatch, 1000);
    }
  }
  
  function checkMatch() {
    const [card1, card2] = flippedCards;
    
    if (cardValues[card1.index] === cardValues[card2.index]) {
      card1.card.classList.add('matched');
      card2.card.classList.add('matched');
      matchedPairs++;
      score += 10;
      
      if (matchedPairs === emojis.length) {
        setTimeout(() => {
          alert('Parab√©ns! Voc√™ venceu! Pontua√ß√£o: ' + score);
        }, 500);
      }
    } else {
      card1.card.textContent = '‚ùì';
      card2.card.textContent = '‚ùì';
      card1.card.classList.remove('flipped');
      card2.card.classList.remove('flipped');
      score = Math.max(0, score - 2);
    }
    
    flippedCards = [];
    updateScore();
  }
  
  function updateScore() {
    document.getElementById('score').textContent = score;
  }
  
  function resetGame() {
    initializeGame();
  }
  
  // Inicializar o jogo quando a p√°gina carregar
  window.onload = initializeGame;
</script>
